{
  "name": "VSD RISC-V Toolchain",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.makefile-tools",
        "ms-vscode.hexeditor"
      ]
    }
  },
  "containerEnv": {
    "PATH": "/opt/riscv/bin:/opt/riscv/riscv64-unknown-elf/bin:${containerEnv:PATH}"
  },
  "postCreateCommand": "make -C samples hello-spike || true",
  "hostRequirements": { "cpus": 2, "memory": "8gb" }
}
